<?xml version="1.0"?>
<config>
    <modules>
        <ProstylePc_PrepaidOnly>
            <version>0.1.0</version>
        </ProstylePc_PrepaidOnly>
    </modules>
    <global>
        <events>
            <payment_method_is_active>
                <observers>
                    <prepaid_only>
                        <type>singleton</type>
                        <class>prepaidonly/observer</class>
                        <method>prepaidonly</method>
                    </prepaid_only>
                </observers>
            </payment_method_is_active>
        </events> 
        <models>
            <prepaidonly>
                <class>ProstylePc_PrepaidOnly_Model</class>
                <resourceModel>prepaidonly_mysql4</resourceModel>
            </prepaidonly>
        </models>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <prepaid_only/>
                    </product_attributes>
                </item>
            </quote>
        </sales>
    </global>
</config>